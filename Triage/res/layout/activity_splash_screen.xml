<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/triage_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nurses.triage.Splash_screen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.18"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/imageViewSplashScreenIcon"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:layout_gravity="center"
            android:paddingTop="70dp"
            android:src="@drawable/main_icon_app_512x512" />

    <ImageView
        android:id="@+id/imageViewSplashScreenMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="50dp"
        android:src="@drawable/triage_message" />
    
    </LinearLayout>

</RelativeLayout>