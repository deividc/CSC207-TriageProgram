<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/triage_background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nurses.triage.Screen_list_patients" >

    <RadioGroup
        android:id="@+id/radioGroupListPatientOrdering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" >

        <RadioButton
            android:id="@+id/radioButtonListPatientsOrderByUrgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/triage_radiobutton"
            android:paddingLeft="10dp"
            android:text="@string/order_by_urgency"
            android:textColor="@color/color_background_2"
            android:textSize="@dimen/text_medium_size" />

        <RadioButton
            android:id="@+id/radioButtonListPatientsOrderByTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/triage_radiobutton"
            android:paddingLeft="10dp"
            android:text="@string/order_by_time"
            android:textColor="@color/color_background_2"
            android:textSize="@dimen/text_medium_size" />

    </RadioGroup>

    <ListView
        android:id="@+id/listViewListPatientsList"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioGroupListPatientOrdering"
        android:background="@color/text_white" >

    </ListView>

</RelativeLayout>