<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.triage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon_app_xxhdpi"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nurses.triage.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_patient"
            android:label="@string/title_activity_screen_patient"
            android:theme="@style/TriageActionTheme"
            android:icon="@drawable/patient_icon" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_condition"
            android:label="@string/title_activity_screen_condition"
            android:icon="@drawable/syringe_icon" > 
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_list_patients"
            android:label="@string/title_activity_screen_list_patients" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_list_conditions"
            android:label="@string/title_activity_screen_list_conditions"
            android:icon="@drawable/patient_history_icon" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_new_patient"
            android:theme="@style/TriageActionTheme"
            android:label="@string/title_activity_screen_new_patient"
            android:icon="@drawable/add_icon" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_about"
            android:label="@string/title_activity_screen_about" >
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_login"
            android:label="@string/title_activity_screen_login"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.nurses.triage.Splash_screen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nurses.triage.Screen_prescription"
            android:label="@string/title_activity_screen_prescription"
            android:icon="@drawable/pill_icon" >
        </activity>
    </application>

</manifest>
